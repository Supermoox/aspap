<div class="panel panel-default">
  <% unless @post.directorate.blank? %> 
    <div style="text-align: right;">  
      <%= link_to @post.directorate do %>
        <p style="font-style: italic; font-size: smaller;"><%= @post.directorate.name %></p>
      <% end %>
    </div>
  <% end %>
  <div class="post">
    <% unless @post.image.blank? %>
      <img class="img-responsive" src="<%=  @post.image %>" class="img-fluid">
    <% end %>
    <p id="post-header"><%= @post.title %></p>
    <p id="post-body">
      <div id="article-body">
        <p>
          <%= simple_format(@post.body) %>
        </p>
      </div>
      <span style="color: grey; font-style: italic;"> - Post by</span>
      <span style="color: #6495EA;"><%= link_to @post.user.username , @post.user%></span>
      <% if @post.user.image.blank? %>
        <span id="user_avatar"><img src="<%= asset_path( 'default_user.png' ) %>" /></span>
      <% else %>
        <span id="user_avatar"><%= link_to (image_tag @post.user.image ), @post.user %> </span>
      <% end %>
    </p>
  </div>
  <div class="comments">
  	<% if @comments.blank? %>
      <p style="font-style: italic;">No comments on this post yet, be the first to comment!</p>
    <% else %>
  		<% @comments.each do |comment| %>
  			<div class="comment">
          <div class="row">
            <div class="col-md-2 comment-owner"> 
              <% if comment.user.image.blank? %>
                <span id="user_avatar"><img src="<%= asset_path( 'default_user.png' ) %>" /></span>
              <% else %>
                <span id="user_avatar"><%= link_to (image_tag comment.user.image), comment.user  %> </span>
              <% end %>
            </div>
    				<div class="col-md-10 comment-body">
              <p class="media-heading">
                <span style="color: #6495EA; font-size: small"><%= link_to comment.user.username, comment.user %> </span> 
              </p>
              <p style="font-size: large; font-family: initial; "><%= simple_format(comment.body) %> </p>
              <h5 class="media-heading">
                <small><%= comment.created_at.strftime("%A, %b %d, %Y at %I:%M%p") %></small>
              </h5>
            </div>
          </div>
        </div>
  		<% end %>
  	<% end %>
  	<h4> Comment</h4>
  	<%= render "comments/form" %>
  </div>
</div>




 