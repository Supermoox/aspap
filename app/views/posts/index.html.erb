<div class="main-content">
  <div class="journal-header">
    <p>Discussions</p>
  </div>
  <div class="panel">
    <% @posts.each do |post| %> 
      <%= link_to post do %> 
        <div class="row clickable-div">
          <div class="col-sm-2 ">
            <% if post.user.image.blank? %>
              <p id="user_avatar"><img src="<%= asset_path( 'default_user.png' ) %>" /></p>
            <% else %>
              <p id="user_avatar"><%= image_tag post.user.image %></p>
            <% end %>
          </div>       
          <div class="col-sm-10 ">
          <div class="discuss">
            <p ><strong style="font-family: initial; font-size: large;"><%=  post.title  %> </strong></p>
            <div class="fadded">
              <span><%=  post.body  %> </span>
            </div>
          </div>
          </div>  
        </div>
      <% end %>
    <% end %>
    <p> <%= will_paginate @posts %> </p>
    <div class="post-form">
      <%= form_for  @post do |f| %>
        <div class="form-group">
          <p id="form-lebel"><%= f.label :Title %><p>
          <p> <%= f.text_field :title, :placeholder =>"title...", class: "form-control"%></p>
        </div>

        <div class="form-group">
          <p id="form-lebel"><%= f.label :Directorate %><p>
          <%= collection_select(:post, :directorate_id, Directorate.all, :id, :name, :prompt => "Select") %>
        </div>

        <div class="form-group">
          <p id="post-text"><%= f.text_area :body, :placeholder =>"write here...", class: "form-control" %></p>
        </div>

        <div class="actions">
          <%= f.submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>






