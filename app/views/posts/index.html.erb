<div class="main-content">
  <div class="journal-header">
    <p>Discussions</p>
  </div>
  <div class="panel">
    <% @posts.each do |post| %> 
      <%= link_to post do %> 
        <div class="row clickable-div">
          <div class="col-sm-2 posts-col-sm">
            <% if post.user.image.blank? %>
              <div id="user_avatar">
                <div style="position: relative; left: 0; top: 0;">
                  <div id="paged_pic">
                  <span ><img src="<%= asset_path( 'default_user.png' ) %>" /></span>
                  </div>
                  <div id="certificate_posts">
                    <% if !post.user.membership.blank? %>
                      <span style="color: orange; font-size: 20px;">
                        <i class="fa fa-certificate" aria-hidden="true"></i>
                      </span>
                    <% end %>
                  </div>
                </div>
              </div>
            <% else %>
              <div id="user_avatar">
                <div style="position: relative; left: 0; top: 0;">
                  <div id="paged_pic">
                  <span ><%= image_tag post.user.image %></span>
                  </div>
                  <div id="certificate_posts">
                    <% if !post.user.membership.blank? %>
                      <span style="color: orange; font-size: 20px;">
                        <i class="fa fa-certificate" aria-hidden="true"></i>
                      </span>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>       
          <div class="col-sm-10">
          <div class="discuss">
            <p ><strong style="font-family: initial; font-size: large;"><%=  post.title  %> </strong></p>
            <div class="fadded">
              <span><%=  post.body  %> </span>
            </div>
          </div>
          </div>  
        </div>
      <% end %>
    <% end %>
    <p> <%= will_paginate @posts %> </p>
  </div>
</div>






