

<div class="my-form">
  <%= form_with(model: post, local: true) do |form| %>
    <% if post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <p id="form-lebel"><%= form.label :title %><p>
      <%= form.text_field :title, :placeholder =>"title", :required => true, class: "form-control"  %>
    </div>    

    <div class="form-group">
      <p id="form-lebel"><%= form.label :Directorate %><p>
      <%= collection_select(:post, :directorate_id, Directorate.all, :id, :name, :prompt => "Select") %>
    </div>

    <div class="form-group">
      <p id="form-lebel"><%= form.label :image %><p>
      <%= form.file_field :image, class: "form-control"  %>
    </div>

    <div class="form-group">
      <p id="form-lebel"><%= form.label :body %><p>
      <%= form.text_area :body, :placeholder =>"write here...",  :required => true, class: "form-control" %>
    </div>



    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>
