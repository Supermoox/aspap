
<div class="my-form">
  <%= form_for([@user, @membership]) do |f| %>
       <div class="modal-body">
        <div class="write_post">  
          <% if @user.image.blank? %>
            <span id="user_avatar"><img src="<%= asset_path( 'user.png', alt: "avatar" ) %>" /></span>
          <% else %>
            <span id="user_avatar"><%= image_tag @user.image %> </span>
          <% end %>
           <span id="user_name"><%= @user.firstname %> </span>
           <span id="user_name"><%= @user.surname %> </span>
          
            <div class="form-group">
              <p id="form-lebel"><%= f.label :Membership_Type %><p/>
              <%=  f.collection_select :kind, Membership.kinds.map{ |a| [a.first,a.first] },  :first, :second , :required => true %>
            </div>
            <div class="form-group">
              <p id="form-lebel"><%= f.label :Upload_Member_ID %></p>
              <%= f.file_field :card, :required => true %>
            </div>

        </div>
      </div>
      <div class="modal-footer">
        <input type="submit" name="commit" value=" Create" data-disable-with="Create">
      </div>
  <% end %>
</div>
