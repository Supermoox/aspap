
<div class="my-form">
  <h3 style="text-align: center;">Write a Review </h3>
  <%= form_for([@manuscript, @review]) do |form| %>
    <% if @review.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

        <ul>
        <% @review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <p id="form-lebel"><%= form.label :Rating %><p>
      <div id="star-rating"></div>
    </div>

    <div class="form-group">
      <p id="form-lebel"><%= form.label :comment %><p>
      <%= form.text_area :comment, :placeholder =>"write here...",  :required => true, class: "form-control" %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>
<script>
  $('#star-rating').raty({
    path: '/assets',
    scoreName: 'review[rating]'
  });

</script>