  
<div class="row">
  <div class="col-md article">
    <div class="journal-header">
      <p>Applicant's  Details</p>
    </div>
      <div class="panel">
        <div class="panel-body">
          <div class="row user_info">
          	<div class="col-md-2">
  		        <% if @download.user.image.blank? %>
  		          <%= link_to(image_tag("/assets/user.png", alt: "user_avatar"), @download.user ) %> 
  		        <% else %>
  		          <span id="user_avatar">
                <%= link_to(image_tag(@download.user.image), @download.user ) %> 
                </span>
  		        <% end %>
          	</div>
          	<div class="col-md-10">
                  <% if @download.user.membership.blank? %>
                  <p style="color: red; text-decoration: underline;"><%=link_to "Go to the user's page to create their membership" , @download.user %>
                  </p>
                  <% else %>
                  <% end %>

          		<h3 id="form-header">Personal Info</h3>
          		<p>
          		<span><strong>Title</strong></span>
          		<span id="request_info"><strong> <%= @download.user.title %></strong></span>
          		</p>   
          		<p>
          		<hr>
          		<span><strong>First Name</strong></span>
          		<span id="request_info"><strong> <%= @download.user.firstname %></strong></span>
          		</p>   

          		<p>
          		<hr>
          		<span><strong>Middle Name</strong></span>
          		<span id="request_info"><strong> <%= @download.user.middlename %></strong></span>
          		</p>        		
          		<p>
          		<hr>
          		<span><strong>Surname</strong></span>
          		<span id="request_info"><strong> <%= @download.user.surname %></strong></span>
          		</p>        		
          		<p>
          		<hr>
          		<span><strong>Email</strong></span>
          		<span id="request_info"><strong> <%= @download.user.email %></strong></span>
          		</p>        		
                  <p>
                  <hr>
                  <span><strong>Work Place</strong></span>
                  <span id="request_info"><strong> <%= @download.user.placeOfWork %></strong></span>
                  </p>          		
                  <p>
          		<hr>
          		<span><strong>Phone Number</strong></span>
          		<span id="request_info"><strong> <%= @download.user.phone %></strong></span>
          		</p>        		
                  <hr>
          		<h3 id="form-header">Education</h3>
          		<p>
          		<span><strong>Institution</strong></span>
          		<span id="request_info"><strong> <%= @download.user.institution %></strong></span>
          		</p>        		
          		<p>
          		<hr>
          		<span><strong>Qualification</strong></span>
          		<span id="request_info"><strong> <%= @download.user.qualification %></strong></span>
          		</p> 
              <p>
              <hr>
                <span><strong>Proof of Qualification</strong></span>
                <span id="note3">
                  <span id="request_info">
                  <% if @download.user.document_content_type == "application/pdf" %>
                    <%= link_to image_tag("/assets/doc3.jpg", alt: "pdf"), @download.user.document.url, target: "_blank" %>
                  <% else %>
                    <%= link_to image_tag("/assets/note3.png", alt: "doc"), @download.user.document.url, target: "_blank" %>
                  <% end %>
                  </span>
                </span>
              </p>       		
          		<p>
          		<hr>
          	</div>
          </div>
        </div>
      </div>        
  </div>
</div>

