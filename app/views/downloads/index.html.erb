<div class="row">
  <div class="col-md article">    
      <div class="journal-header">
        <p>Downloads</p>
      </div>
      <% @downloads.order("created_at DESC").each do |download| %>
        <div class="panel">
          <div class="panel-body">
            <div class="row">
              <div class="col-sm-6 ">
                <span style="color: #337ab7; font-family: initial; font-size: large;"><%=  download.title %></span>
              </div>       
              <div class="col-sm-6 ">
                <p style="color:#337ab7;"> 
                  <span id="note3">
                    <% if download.document_content_type == "application/pdf" %>
                      <%= link_to image_tag("/assets/doc3.jpg", alt: "pdf"), download.document.url, target: "_blank" %>
                    <% else %>
                      <%= link_to image_tag("/assets/note3.png", alt: "doc"), download.document.url, target: "_blank" %>
                    <% end %>
                  </span>
                  <% if user_signed_in? && current_user.vip %>        
                    <span>
                      <%= link_to download, method: :delete, data: { confirm: 'Are you sure you want to delete this Download?' }, class: "btn btn-default" do %>
                        <i class="fa fa-trash" aria-hidden="true"></i>
                      <% end %>
                    </span>        
                  <% end %> 
                </p>
              </div>  
            </div>
          </div>
        </div>        
      <% end %>
  </div>
</div>

