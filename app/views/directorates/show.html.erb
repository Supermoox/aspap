<div class="main-content">
<h3 id="form-header"><%= @directorate.name %></h3>
  <% if user_signed_in? && current_user.vip %>
    <div style="color: red;">
      <span>
        <%= link_to @directorate, method: :delete, data: { confirm: 'Are you sure you want to delete this directorate?' }, class: "btn btn-default" do %>
          <i class="fa fa-trash" aria-hidden="true"></i>
        <% end %>
      </span>  
      <span><%= link_to 'Edit', edit_directorate_path(@directorate), class: "btn btn-default" %></span>           
    </div>
  <% end %>
  <div class="executive">
   
    <div class="row">
      <div class="executive_description">
      	<p>  	  
      	  <span><%= @directorate.description %></span> 
      	</p>
      </div>
    </div>
  </div>
</div>


<% unless @researches.blank? %>
  <div class="panel">
   <div class="panel-body">
    <h4>Related Research
      <hr style="height:2px;border:none;color:#333;background-color:#708090;" />
    </h4>
    <% @researches.each do |research| %>
      <h4 id="research-link">
        <span style="float: right; font-size: small;">
          <% if research.concluded %> 
            <span style="color: grey; margin-right:10px;">Status</span><span style="color: #32CD32;">Concluded</span>
          <% else %>   
            <span style="color: grey; margin-right:10px;">Status</span><span style="color: #32CD32;">On Going</span>
          <% end %>   
        </span>
        <span><%=link_to research.topic,research  %><span>
      </h4>
    <% end %>
    </div>
  </div>
<% end %>

<% unless @articles.blank? %>
  <div class="panel">
   <div class="panel-body">
    <h4>Related Articles
      <hr style="height:2px;border:none;color:#333;background-color:#708090;" />
      <% @articles.each do |article| %>
        <h4 id="research-link">  
          <span><%=link_to article.title, article  %><span>
        </h4>
      <% end %>
    </div>
  </div>
<% end %>

<% unless @posts.blank? %>
  <div class="panel">
   <div class="panel-body">
    <h4>Related Posts
      <hr style="height:2px;border:none;color:#333;background-color:#708090;" />
      <% @posts.each do |post| %>
        <h4 id="research-link">  
          <span><%=link_to post.title, post  %><span>
        </h4>
      <% end %>
    </div>
  </div>
<% end %>

