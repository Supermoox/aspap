
<div class="slide-show">
	<div class="panel-default">
		<div id="myCarousel" class="carousel slide" data-ride="carousel">
	      <!-- Indicators -->
	      <ol class="carousel-indicators">
	        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
	        <li data-target="#myCarousel" data-slide-to="1"></li>
	        <li data-target="#myCarousel" data-slide-to="2"></li>
	      </ol>

	      <!-- Wrapper for slides -->
	      <div class="carousel-inner">
	        <div class="item active">
	          <img src="<%= asset_path( 'g6.jpg' ) %>" />
	        </div>

	        <div class="item">
	           <img src="<%= asset_path( 'g4.jpg' ) %>"  />
	        </div>
	         <div class="item">
	           <img src="<%= asset_path( 'cbu.jpg' ) %>"  />
	        </div>
	      </div>

	      <!-- Left and right controls -->
	      <a class="left carousel-control" href="#myCarousel" data-slide="prev">
	        <span class="glyphicon glyphicon-chevron-left"></span>
	        <span class="sr-only">Previous</span>
	      </a>
	      <a class="right carousel-control" href="#myCarousel" data-slide="next">
	        <span class="glyphicon glyphicon-chevron-right"></span>
	        <span class="sr-only">Next</span>
	      </a>
	  </div>
	</div>
</div>
 	
<div class="row main-content">

	<div class="row middle">
		<div class="col-md-6 notice-board">
			<hr style="height:2px;border:none;color:#333;background-color:#708090;" />
			<h3 class="sub-title">News & Events</h3>
			<ul class="sub-content"> 
				<% unless @events.blank? %>
					<% @events.each do |event| %>
						<li>
							<p id="event"><%= event.title %>	</p>
							<p id="event_fade" "><%= event.body %>	</p>
						</li>
					<% end %>
				<% end %>
			</ul>
		</div>
		<div class="col-md-6">
			<hr style="height:2px;border:none;color:#333;background-color:#708090;" />
			<h3 class="sub-title">Join Discussions!</h3>
			<div class="join-discussions">
				<% unless @posts.blank? %>
					<%= link_to @posts.fourth do %> 
						<div class="sub-item1">
							<p id="trunc"><%=  @posts.fourth.title %></p>
						</div>
					<% end %>

					<% unless @posts.third.blank?  %>
						<%= link_to @posts.third do %> 
							<div class="sub-item2">
								<p id="trunc"><%=  @posts.third.title %></p>
							</div>
						<% end %>
					<% end %>

					<% unless @posts.second.blank?  %>
						<%= link_to @posts.second do %> 
							<div class="sub-item3">
								<p id="trunc"><%=  @posts.second.title %></p>
							</div>
						<% end %>
					<% end %>

					<% unless @posts.first.blank?  %>
						<%= link_to @posts.first do %> 
							<div class="sub-item4">
								<p id="trunc"><%=  @posts.first.title  %></p>
							</div>
						<% end %>
					<% end %>
				<% end %>
			</div>
		</div>		
	</div>
	<div class="row bottom">
		<hr style="height:2px;border:none;color:#333;background-color:#708090;" />
			<% unless @articles.blank? %>
		    <% @articles.each do |article| %>
		      <div class="col-md-4">
		        <%= link_to article do %>
			        <div class="thumbnail thumbnail-article">		          		          
		        		<% if article.image.blank? %>
		        			 
		        		<% else %>
		              <%=  (image_tag article.image, class: 'image') %>
		            <% end %>
			          <div class = "caption">
			              <h5 id="thumb-title">  
			               <strong> 
			               		<span><%=  article.title %> </span>
			               </strong>
			              </h5>
			             <div class="brief-body">
			             	<%=  article.body %>
			             </div>
			          </div>
			        </div>
		        <% end %>
		      </div>
		    <% end %>
	    <% end %>
	    <p> <%= will_paginate @articles %> </p>
	</div>
</div>
