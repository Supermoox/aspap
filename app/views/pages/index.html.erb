<div class="container-fluid">
	<div class="row">
		<div class="col-md-3  left_menu">  
		  <%= render 'layouts/leftSide_menu' %>
		</div>
		<div class="col-md-9 middle_content">
			<div class="row">
				<% if user_signed_in?%>
					<%= render 'layouts/top_content' %>
				<% else %>
					<div class="slide-show">
						<div class="row">
								<div id="myCarousel" class="carousel slide" data-ride="carousel">
						      <!-- Indicators -->
						      <ol class="carousel-indicators">
						        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
						        <li data-target="#myCarousel" data-slide-to="1"></li>
						        <li data-target="#myCarousel" data-slide-to="2"></li>
						      </ol>

						      <!-- Wrapper for slides -->
						      <div class="carousel-inner">
						        <div class="item active">
                    	<img src="<%= asset_path( 'aspap2.png' ) %>" alt="1" class="img-responsive" />
						        </div>	        
						        <div class="item">
						           <img src="<%= asset_path( 'g4.jpg' ) %>"  />
						        </div>
						         <div class="item">
						           <img src="<%= asset_path( 'cbu.jpg' ) %>"  />
						        </div>
						      </div>

						      <!-- Left and right controls -->
						      <a class="left carousel-control" href="#myCarousel" data-slide="prev">
						        <span class="glyphicon glyphicon-chevron-left"></span>
						        <span class="sr-only">Previous</span>
						      </a>
						      <a class="right carousel-control" href="#myCarousel" data-slide="next">
						        <span class="glyphicon glyphicon-chevron-right"></span>
						        <span class="sr-only">Next</span>
						      </a>
						      </div>
						    </div>
					</div>
				<% end %>
			</div>
			<div class="row join-discussions"> 	
				<%=link_to articles_path(@articles) do %>
					<span style="color: #4169E1;"> ASPAP </span> 
					<span>articles</span>
				<% end %>
			</div>
				
			<div class="row main-content">
				<div class="row bottom">
					<% unless @articles.blank? %>
				    <% @articles.each do |article| %>
							<div class="row article">
								<%= link_to article.user do %> 
							    <% if article.user.image.blank? %>
			              <span id="user_avatar"><%= (image_tag("/assets/user.png", alt: "user_avatar") ) %></span>
						        <span id="user_avatar"><%= article.user.firstname %> </span>
						        <span id="user_avatar"><%= article.user.surname %> </span>
							    <% else %>	
			              <span id="user_avatar"><%= image_tag article.user.image %> </span>
					          <span id="user_avatar"><%= article.user.firstname %> </span>
					          <span id="user_avatar"><%= article.user.surname %> </span>
							    <% end %>
				          <% unless article.user.membership.blank? %>
				            <p style="color: black; font-size: 14px; font-family: times; font-style: italic;">
				             <% if article.user.membership.kind == "Executive" %>
				                <span style="color: gold;"><i class="fa fa-address-card" aria-hidden="true"> </i> </span>
				                <span style="color: gold;">(Executive)</span>
				              <% elsif article.user.membership.kind == "Proffesional" %>
				                <span style="color: #7CFC00;"><i class="fa fa-address-card" aria-hidden="true"> </i> </span>
				                <span style="color: #7CFC00;">(Professional)</span>
				              <% else %>
				                <span style="color: #835220;"><i class="fa fa-address-card" aria-hidden="true"> </i> </span>
				                <span style="color: #835220;">(Student)</span>
				              <% end %>               
				              <span>ASPAP</span>
				              <span> Certified </span>
				              <span>member! </span>
				            </p>
				          <% end %> 
						    <% end %>
								<%= link_to article do %>
								  <div>
								    <div id="article-title-small">
								    	<%=  article.title %>					    		
								    </div>
								    <div id="article-body-small">
											<%= simple_format(article.body) %> 
										</div>
										<span style="font-style: italic; margin: 0; color: blue; font-size: 10px">...More</span>
								    <div style="margin-top: 10px;">
								      <% unless article.image.blank? %>
								        <div class="article_image">
								          <%= image_tag article.image %>          
								        </div>  
								      <% end %> 
								    </div>
								  </div>
								<% end %>
							</div>
							  <div class="row small_article_footer">
							  	<span style="font-size: 14px;">Coments (<%= article.articomments.count %>)</span>
							  </div>
				    <% end %>
			    <% end %>    
					<p style="font-style: italic; text-align:right; font-size: 16px;"><%= link_to "...See more articles" ,articles_path(@articles) %></p>  
				</div>
			</div>
			<div class="row join-discussions"> 
				<%= link_to posts_path(@posts) do %>
					<span>Join Discussions</span> 
				<% end %>
			</div>
			<div class="row main-content">
				<div class="row middle">
			    <% @posts.each do |post| %> 
			      <%= link_to post do %> 
			        <div class="row clickable-div">
			          <div class="col-sm-2 posts-col-sm">
			            <% if post.user.image.blank? %>
			              <div id="user_avatar">
			                <span ><img src="<%= asset_path( 'default_user.png' ) %>" /></span>
						          <% unless post.user.membership.blank? %>
						            <span style="color: #32CD32; font-size: 14px; font-family: times; font-style: italic;">
						             <% if post.user.membership.kind == "Executive" %>
						                <span style="color: gold;"><i class="fa fa-address-card" aria-hidden="true"> </i> </span>
						              <% elsif post.user.membership.kind == "Proffesional" %>
						                <span style="color: #7CFC00;"><i class="fa fa-address-card" aria-hidden="true"> </i> </span>
						              <% else %>
						                <span style="color: #835220;"><i class="fa fa-address-card" aria-hidden="true"> </i> </span>
						              <% end %>               
						            </span>
						          <% end %> 
				             </div>
			            <% else %>
			              <div id="user_avatar">
			                <span ><%= image_tag post.user.image %></span>
						          <% unless post.user.membership.blank? %>
						            <span style="color: #32CD32; font-size: 14px; font-family: times; font-style: italic;">
						             <% if post.user.membership.kind == "Executive" %>
						                <span style="color: gold;"><i class="fa fa-address-card" aria-hidden="true"> </i> </span>
						              <% elsif post.user.membership.kind == "Proffesional" %>
						                <span style="color: #7CFC00;"><i class="fa fa-address-card" aria-hidden="true"> </i> </span>
						              <% else %>
						                <span style="color: #835220;"><i class="fa fa-address-card" aria-hidden="true"> </i> </span>
						              <% end %>               
						            </span>
						          <% end %> 
			              </div>
			            <% end %>
			          </div>       
			          <div class="col-sm-10">
			          <div class="discuss">
			            <p ><strong style="font-family: initial; font-size: large;"><%=  post.title  %> </strong></p>
			            <div class="fadded">
			              <span><%=  post.body  %> </span>
			            </div>
			          </div>
			          </div>  
			        </div>
			      <% end %>
			    <% end %>
			    <p style="font-style: italic; text-align:right; font-size: 16px;"><%= link_to "...See more posts" ,posts_path(@posts) %></p>
				</div>
			</div>
		</div>
	</div>
</div>






