<div class="row user-header">
  <div class="cover">
    <div class="row">
      <div class="col-md-4 user_profile_picture">
        <% if  @user.image.blank? %>
          <span ><img src="<%= asset_path( 'default_user.png' ) %>" /></span>
        <% else %> 
          <div type="button" data-toggle="modal" data-target="#myModal">
            <span><%= image_tag @user.image %></span>
          </div>  
        <% end %>  
        <p style="color: #4169E1; font-size: 18px; margin:0; padding: 0; ">
          <span><%= @user.firstname %></span>
          <% unless @user.middlename.blank?  %>
            <span><%= @user.middlename %></span>
          <% end %>
          <span><%= @user.surname %></span>
        </p> 
        <p  style="font-size: smaller; color: grey;">
          <span>Email:</span>
          <span><%= @user.email %></span><br>
          <% unless @user.phone.blank? %>
            <span ><i class="fa fa-phone" aria-hidden="true"></i></span>
            <span><%= @user.phone %></span>           
          <% end %>          
        </p>      
      </div>
      <div class="col-md-8 profile_details">
        <p>
          <% unless @user.qualification.blank? %>  
          <p>
            <span style="color: grey;"><i class="fa fa-graduation-cap" aria-hidden="true"> </i> </span>
            <span><%=  @user.qualification %></span>,
          
            <% end %>
            <% unless @user.field.blank? %>  
              <span ><%=  @user.field %></span><br>
            <% end %>
          </p>
          <p>
            <% unless @user.institution.blank? %>  
              <span style="color: grey;"><i class="fa fa-university" aria-hidden="true"> </i> </span>
              <span><%=  @user.institution %></span><br>
            <% end %>
          </p>
          <p>
            <% unless @user.placeOfWork.blank? %>  
              <span style="color: grey;"><i class="fa fa-briefcase" aria-hidden="true"> </i> </span>
              <span>Works at </span>
              <span><%=  @user.placeOfWork %></span>
            <% end %>
          </p>
        </p> 
        <% if user_signed_in? %>
          <% if current_user == @user %>
            <strong style="color: blue; margin-top: 20px;float: right; font-size: 18px;"><%= link_to "Edit" , edit_user_registration_path %>
              <span style="color:grey;"><i class="fa fa-pencil" aria-hidden="true"> </i> </span>
            </strong> 
          <% elsif current_user.verified?  %>
            <%= form_for :conversation, url: :conversations, html: { class: "" } do |f| %>
              <span style="float: right; "> 
                <span class="dropdown-toggle dropdown-send-message" data-toggle="dropdown">
                  <span style="color: #4169E1;">
                    <%= f.select :recipients, @users.all.collect {|p| [ "Send Message", p.id ] }, {} ,{ multiple: true}  %>
                  </span>
                </span> 
                <ul class="dropdown-menu dropdown-menu-notification">
                  <li>
                    <div class="form-group">
                      <%= f.label :subject %>
                      <%= f.text_field :subject, placeholder: "Subject", class: "form-control", :required => true %>
                    </div>
                  </li>
                  <li>
                    <div class="form-group">
                      <%= f.label :message %>
                      <%= f.text_area :body, class: 'form-control',placeholder: "Type your message here", :required => true, rows: 4  %>
                    </div>
                  </li>
                  <li>
                    <%= f.submit "Send Message", class: "btn btn-success" %>
                  </li>
                </ul>
              </span>
            <% end %>
          <% end %>
        <% end %>
       </p>
      </div>
    </div>
  </div>
</div>

<% unless !user_signed_in? %>
  <% if current_user.verified? && current_user == @user %>  
    <div class="row top-content">
      <div class="row">
        <div class="col-md-12 col-md-6-openPostBox">
          <div type="button" class="openPostBox" data-toggle="modal" data-target="#myModal2">
            <span style="font-size: 24px;color: grey;"><i class="fa fa-edit" aria-hidden="true"> </i> </span>
            <span style="font-size: 18px; color: grey;">Write at post...</span>
          </div>   
        </div>
      </div>
      <div class="row submit-aspap-artical">
        <div class="row">
          <div class="col-md-3">
            <button class="btn dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> 
            <span style="color: grey;font-size: 14px;"><i class="fa fa-code-fork" aria-hidden="true"></i></span>
            <span style="color: #38678b; font-size: 16px;"> 
                Directorates
            </span>
            </button>
            <div class="dropdown-menu">
              <% @directorates.each do |directorate| %>
                <p style="margin-left: 20px;">
                  <span style="color: grey;">
                    <i class="fa fa-circle" aria-hidden="true"></i>
                  </span>
                  <span><%= link_to directorate.name, directorate  %></span>
                </p>
              <% end %>
            </div>
          </div>        
          <div class="col-md-4 top-content-footer">
            <span style="color: grey; font-size: 14px;margin-left: 20px; ; color: black;"><i class="fa fa-newspaper-o"></i><%= link_to "Write an ASPAP Article" ,new_article_path %> </span>
          </div>        
          <div class="col-md-5 top-content-footer2">
            <span style="color: grey; font-size: 14px; color:grey; margin-left: 20px"><i class="fa fa-book"></i><%= link_to "Publish to our journal" ,new_manuscript_path %> </span>         
          </div>
        </div>
      </div>
    </div> 
    <!-- Modal -->
    <div class="modal fade" id="myModal2" role="dialog">
      <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Create a Post</h4>
          </div>

          <%= form_for  @post do |f| %>
            <div class="modal-body">
              <div class="write_post">  
                <% if current_user.image.blank? %>
                  <span id="user_avatar"><img src="<%= asset_path( 'user.png', alt: "avatar" ) %>" /></span>
                <% else %>
                  <span id="user_avatar"><%= image_tag current_user.image %> </span>
                <% end %>
                 <span id="user_name"><%= current_user.username %> </span>
                
                  <span style="width: 100px;"><%= collection_select(:post, :directorate_id, @directorates.all, :id, :name) %>   
                  </span>  
                <p id="post-text">
                  <%= f.text_area :body, :placeholder =>"What do you want to discuss?", class: "form-control" , :required => true%>
                </p> 
              </div>
            </div>
            <div class="modal-footer">
              <input type="submit" name="commit" value=" Post" data-disable-with="Post">
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% else  %>
    <div class="row top-content">
  
    </div>
  <% end %>
<% end %>

  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <div class="profile_picture_large">
            <%= image_tag @user.image %>
          </div>
        </div>
      </div>
    </div>
  </div>


<% unless @user.verified? %>
  <% if user_signed_in? && current_user.vip? %>
    <span style="color: green; float: right; margin-right: 10px;"> <%= link_to 'verify User',verify_user_user_path(@user), method: :patch, class: "btn btn-default", data: { confirm: 'Are you sure?' } %>
    </span>         
    <span style="color: green; float: right; margin-right: 10px;"> <%= link_to 'Delete User',delete_user_user_path(@user), method: :patch, class: "btn btn-default", data: { confirm: 'Are you sure?' } %>
    </span> 
  <% end %>
<% end %>



<div class="row">

	<% unless @manuscripts.blank? %>
    <div class="panel">
      <div class="panel-body">
      	<h4>Manuscripts</h4>
        <hr style="height:2px;border:none;color:#333;background-color:#708090;" />
      	<% @manuscripts.each do |manuscript| %>
          <div class="row">
            <div class="col-sm-3 ">
                <div class="thumbnail thumbnail-manuscript">
                	<%= image_tag manuscript.image %>
                </div>       
            </div>       
            <div class="col-sm-9 ">
  						<h4 style="color: #337ab7;"><%=  manuscript.title %> </h4>
              <% if manuscript.user.image.blank? %>
                <span id="user_avatar"><img src="<%= asset_path( 'user.png' ) %>" /></span>
              <% else %>
                <span id="user_avatar"><%= image_tag manuscript.user.image %> </span>
  						<% end %>
              <span style="color: #337ab7; font-style: italic; margin-left: 10px;"> <%= manuscript.user.username %></span>
              <span style="color: grey; float: right;"><%= manuscript.created_at.strftime("%b %d, %Y")  %></span>
              <p> <%= simple_format(manuscript.abstract) %>  </p>
              <p style="color:#337ab7;"> 
              	<span>Vol. </span> 
              	<span><%= manuscript.volume %> </span>
              	<span>Issue</span> 
                <span><%= manuscript.issue %> </span>
              	<span id="note3">
                  <% if manuscript.document_content_type == "application/pdf" %>
                    <%= link_to image_tag("/assets/doc3.jpg", alt: "pdf"), manuscript.document.url, target: "_blank" %>
                  <% else %>
                    <%= link_to image_tag("/assets/note3.png", alt: "doc"), manuscript.document.url, target: "_blank" %>
                  <% end %>
                </span>
              </p>
            </div>  
          </div>
        <% end %>
      </div>
    </div>	
	<% end %>


  <% unless @articles.blank? %>
    <div class="panel">
     <div class="panel-body">
      <h4>
        <span>Articles</span>
        <hr style="height:2px;border:none;color:#333;background-color:#708090;" />
      </h4>
      <% @articles.each do |article| %>
        <h4 id="research-link">  
          <span><%=link_to article.title, article  %><span>
        </h4>
      <% end %>
      </div>
    </div>
  <% end %> 

  <% unless @posts.blank? %>
    <div class="panel">
     <div class="panel-body">
      <h4><%= @user.username %>'s  Posts
        <hr style="height:2px;border:none;color:#333;background-color:#708090;" />
      </h4>
      <% @posts.each do |post| %>
        <h4 id="research-link">  
          <% if post.title.blank? %>
            <span><%=link_to post.body, post  %><span>
          <% else %>
            <span><%=link_to post.title, post  %><span>
          <% end %>
        </h4>
      <% end %>
      </div>
    </div>
  <% end %> 

  <% unless @user_researches.blank? %>
    <div class="panel">
     <div class="panel-body">
      <h4>Research
        <hr style="height:2px;border:none;color:#333;background-color:#708090;" />
      </h4>
      <% @user_researches.each do |research| %>
        <h4 id="research-link">
          <span style="float: right; font-size: small;">
            <% if research.concluded %> 
              <span style="color: grey; margin-right:10px;">Status</span><span style="color: #32CD32;">Concluded</span>
            <% else %>   
              <span style="color: grey; margin-right:10px;">Status</span><span style="color: #32CD32;">On Going</span>
            <% end %>   
          </span>
          <span><%=link_to research.topic,research  %><span>
        </h4>
      <% end %>
      </div>
    </div>
  <% end %>
</div>















