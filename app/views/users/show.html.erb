<div class="row user-header">
  <div class="row">
    <div class="cover">
      <img src="<%= asset_path( 'g6.jpg' ) %>" />
    </div>
    <div class="col-md-5 profile-pic">
      <% if  @user.image.blank? %>
        <span ><img src="<%= asset_path( 'default_user.png' ) %>" /></span>
      <% else %>
        <span><%= image_tag @user.image %></span>
      <% end %>
    </div> 
    <div class="col-md-7 profile-menu">
      <div class="row profile-menu-inside">
            <div class="row">
              <div class="col-md-9">
                <p style="color: #4169E1; font-size: 18px; margin:0; padding: 0;">
                  <span style="font-size: x-large; margin-right: 10px;"><%= @user.firstname %></span>
                  <% unless @user.middlename.blank?  %>
                    <span style="font-size: x-large; margin-right: 10px;"><%= @user.middlename %></span>
                  <% end %>
                  <span style="font-size: x-large; margin-right: 10px;"><%= @user.surname %></span>
                </p>
              </div>
              <div class="col-md-3">
                <p>
                <% unless user_signed_in? && current_user == @user %>
                  <%= form_for :conversation, url: :conversations, html: { class: "" } do |f| %>
                    <span style="float: right; "> 
                      <span class="dropdown-toggle dropdown-send-message" data-toggle="dropdown">
                        <span style="color: #4169E1;">
                          <%= f.select :recipients, @users.all.collect {|p| [ "Send Message", p.id ] }, {} ,{ multiple: true}  %>
                        </span>
                      </span> 
                      <ul class="dropdown-menu dropdown-menu-notification">
                        <li>
                          <div class="form-group">
                            <%= f.label :subject %>
                            <%= f.text_field :subject, placeholder: "Subject", class: "form-control", :required => true %>
                          </div>
                        </li>
                        <li>
                          <div class="form-group">
                            <%= f.label :message %>
                            <%= f.text_area :body, class: 'form-control',placeholder: "Type your message here", :required => true, rows: 4  %>
                          </div>
                        </li>
                        <li>
                          <%= f.submit "Send Message", class: "btn btn-success" %>
                        </li>
                      </ul>
                    </span>
                  <% end %>
                <% end %>
                </p>
              </div>
            </div>
          
          <p style="font-size: 18px; margin:0; padding: 0;">
            <% unless @user.qualification.blank? %>  
              <span style="color: grey;"><i class="fa fa-graduation-cap" aria-hidden="true"> </i> </span>
              <span><%=  @user.qualification %></span>,
            <% end %>
            <% unless @user.field.blank? %>  
              <span><%=  @user.field %></span>
            <% end %>
          </p>          
          <p style="font-size: 18px; margin:0; padding: 0;">
            <% unless @user.institution.blank? %>  
              <span style="color: grey;"><i class="fa fa-university" aria-hidden="true"> </i> </span>
              <span><%=  @user.institution %></span>,
            <% end %>
          </p>          
          <p style="font-size: 18px; margin:0; padding: 0;">
            <% unless @user.placeOfWork.blank? %>  
              <span style="color: grey;"><i class="fa fa-briefcase" aria-hidden="true"> </i> </span>
              <span><%=  @user.placeOfWork %></span>,
            <% end %>
          </p>
      </div>
    </div>
  </div>
</div>



<% unless @user.verified? %>
  <% if user_signed_in? && current_user.vip? %>
    <span style="color: green; float: right; margin-right: 10px;"> <%= link_to 'verify User',verify_user_user_path(@user), method: :patch, class: "btn btn-default", data: { confirm: 'Are you sure?' } %>
    </span>         
    <span style="color: green; float: right; margin-right: 10px;"> <%= link_to 'Delete User',delete_user_user_path(@user), method: :patch, class: "btn btn-default", data: { confirm: 'Are you sure?' } %>
    </span> 
  <% end %>
<% end %>



<div class="row">

	<% unless @manuscripts.blank? %>
    <div class="panel">
      <div class="panel-body">
      	<h4><%= @user.username %>'s  Published Manuscripts</h4>
        <hr style="height:2px;border:none;color:#333;background-color:#708090;" />
      	<% @manuscripts.each do |manuscript| %>
          <div class="row">
            <div class="col-sm-3 ">
                <div class="thumbnail thumbnail-manuscript">
                	<%= image_tag manuscript.image %>
                </div>       
            </div>       
            <div class="col-sm-9 ">
  						<h4 style="color: #337ab7;"><%=  manuscript.title %> </h4>
              <% if manuscript.user.image.blank? %>
                <span id="user_avatar"><img src="<%= asset_path( 'user.png' ) %>" /></span>
              <% else %>
                <span id="user_avatar"><%= image_tag manuscript.user.image %> </span>
  						<% end %>
              <span style="color: #337ab7; font-style: italic; margin-left: 10px;"> <%= manuscript.user.username %></span>
              <span style="color: grey; float: right;"><%= manuscript.created_at.strftime("%b %d, %Y")  %></span>
              <p> <%= simple_format(manuscript.abstract) %>  </p>
              <p style="color:#337ab7;"> 
              	<span>Vol. </span> 
              	<span><%= manuscript.volume %> </span>
              	<span>Issue</span> 
                <span><%= manuscript.issue %> </span>
              	<span id="note3">
                  <% if manuscript.document_content_type == "application/pdf" %>
                    <%= link_to image_tag("/assets/doc3.jpg", alt: "pdf"), manuscript.document.url, target: "_blank" %>
                  <% else %>
                    <%= link_to image_tag("/assets/note3.png", alt: "doc"), manuscript.document.url, target: "_blank" %>
                  <% end %>
                </span>
              </p>
            </div>  
          </div>
        <% end %>
      </div>
    </div>	
	<% end %>


  <% unless @articles.blank? %>
    <div class="panel">
     <div class="panel-body">
      <h4>
        <span><%= @user.username %>'s  Articles</span>
        <hr style="height:2px;border:none;color:#333;background-color:#708090;" />
      </h4>
      <% @articles.each do |article| %>
        <h4 id="research-link">  
          <span><%=link_to article.title, article  %><span>
        </h4>
      <% end %>
      </div>
    </div>
  <% end %> 

  <% unless @posts.blank? %>
    <div class="panel">
     <div class="panel-body">
      <h4><%= @user.username %>'s  Posts
        <hr style="height:2px;border:none;color:#333;background-color:#708090;" />
      </h4>
      <% @posts.each do |post| %>
        <h4 id="research-link">  
          <span><%=link_to post.title, post  %><span>
        </h4>
      <% end %>
      </div>
    </div>
  <% end %> 

  <% unless @user_researches.blank? %>
    <div class="panel">
     <div class="panel-body">
      <h4><%= @user.username %>'s  Research works
        <hr style="height:2px;border:none;color:#333;background-color:#708090;" />
      </h4>
      <% @user_researches.each do |research| %>
        <h4 id="research-link">
          <span style="float: right; font-size: small;">
            <% if research.concluded %> 
              <span style="color: grey; margin-right:10px;">Status</span><span style="color: #32CD32;">Concluded</span>
            <% else %>   
              <span style="color: grey; margin-right:10px;">Status</span><span style="color: #32CD32;">On Going</span>
            <% end %>   
          </span>
          <span><%=link_to research.topic,research  %><span>
        </h4>
      <% end %>
      </div>
    </div>
  <% end %>
</div>

