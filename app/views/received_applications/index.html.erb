<div class="row application_portal">
  <div class="col-md custom_wrapper">      
    <div class="journal-header">
      <p> Received Applications</p>
    </div>
    <% @applications.order("created_at DESC").each do |application| %>
      <div class="panel">
        <div class="panel-body">
          <div class="row">
            <div class="col-sm-3 ">
              <% unless application.user.blank? %>
                <span id="applicant"><%= link_to application.title , application %></span>
              <% end %>
            </div>       
            <div class="col-sm-9 ">
              <p style="color:#337ab7;"> 
                <span id="note3">
                  <% if application.document_content_type == "application/pdf" %>
                    <%= link_to image_tag("/assets/doc3.jpg", alt: "pdf"), application.document.url, target: "_blank" %>
                  <% else %>
                    <%= link_to image_tag("/assets/note3.png", alt: "doc"), application.document.url, target: "_blank" %>
                  <% end %>
                </span>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <% if application.status == "Pending" %>
                  <span class="app_item"><%= application.status %></span>           
                <% elsif application.status == "Accepted" %>
                  <span class="app_item_success"><%= application.status %></span>

                <% elsif application.status == "Rejected" %>
                  <span class="app_item"><%= application.status %></span>
                <% end %>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <span style=""><%= link_to 'Update Application', edit_download_path(application), class: "btn btn-default" %></span>


              </p>
            </div>  
          </div>
        </div>
      </div>        
    <% end %>
  </div>

</div>

