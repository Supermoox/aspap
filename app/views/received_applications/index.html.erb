<div class="main-content">
  <div class="journal-header">
    <p> Received Applications</p>
  </div>
  <% @applications.order("created_at DESC").each do |application| %>
    <div class="panel">
      <div class="panel-body">
        <div class="row">
          <div class="col-sm-6 ">
            <% unless application.user.blank? %>
              <span style="color: #337ab7; font-family: initial; font-size: large;"><%= link_to application.title , application %></span>
            <% end %>
          </div>       
          <div class="col-sm-6 ">
            <p style="color:#337ab7;"> 
              <span id="note3">
                <% if application.document_content_type == "application/pdf" %>
                  <%= link_to image_tag("/assets/doc3.jpg", alt: "pdf"), application.document.url, target: "_blank" %>
                <% else %>
                  <%= link_to image_tag("/assets/note3.png", alt: "doc"), application.document.url, target: "_blank" %>
                <% end %>
              </span>
            </p>
          </div>  
        </div>
      </div>
    </div>        
  <% end %>
</div>

