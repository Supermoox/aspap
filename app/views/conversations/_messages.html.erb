<% @receipts.order("created_at").each do |receipt| %>
    <% message = receipt.message %>
    <div class="media">
      <div class="media-left">
        <% if !message.sender.image.blank? %>
          <a href="#">
            <span id="user_avatar"><%= image_tag message.sender.image %> </span><br>
          </a>
        <% else %>
          <a href="#">
            <span id="user_avatar">  <%= link_to(image_tag("/assets/user.png", alt: "user_avatar") ) %> </span><br>
          </a>
        <% end %>
      </div>
      <div class="media-body">

        <p class="media-heading">
          <span style="color: #6495EA;"><%= link_to message.sender.username, message.sender %></span><br>
        </p>
        <div class="message-field">
          <p style="font-size: larger; font-family: initial;">  <%= message.body %> </p>
          <h5 class="media-heading"><small><%=  message.created_at.strftime("%A, %b %d, %Y at %I:%M%p") %></small></h5>
        </div>
      </div>
    </div>
<% end %>